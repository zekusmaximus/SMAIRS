{
  "compilerOptions": {
  "composite": false,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
  "lib": ["ES2022", "DOM"],
    "skipLibCheck": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "typeRoots": ["./node_modules/@types"]
  },
  "include": [
    "vite.config.ts",
    "vitest.config.ts",
    "eslint.config.mjs",
  "tooling.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "out",
  "src/**",
  "scripts/**",
    "tests",
    "src-tauri/**/target"
  ]
}
