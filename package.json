{
  "name": "smairs",
  "version": "0.0.0",
  "private": true,
  "description": "Single Manuscript AI Revision System (Opening Lab)",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:staging": "vite build --mode staging",
    "build:production": "vite build --mode production",
    "build:analyze": "vite build --mode production && npx vite-bundle-analyzer dist/stats.html",
    "preview": "vite preview",
    "typecheck": "tsc -p tsconfig.app.json --noEmit && tsc -p tsconfig.node.json --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier -w .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run --config vitest.config.ts",
    "test:integration": "vitest run tests/integration/",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:smoke": "playwright test tests/e2e/smoke.spec.ts",
    "test:critical": "playwright test --project=critical-path",
    "manuscript:validate": "tsx scripts/manuscript-validate.ts",
    "manuscript:fix": "tsx scripts/manuscript-fix.ts",
    "cli": "tsx src/cli/scene-inventory.ts",
    "cli:test:win": "set FIXED_TIMESTAMP=2024-01-01T00:00:00Z&& set LLM_OFFLINE=1&& npm run cli -- data/manuscript.txt out/test-report.md",
    "cli:test:nix": "FIXED_TIMESTAMP=2024-01-01T00:00:00Z LLM_OFFLINE=1 npm run cli -- data/manuscript.txt out/test-report.md",
    "analyze:opening": "tsx src/cli/analyze-opening.ts",
    "demo": "$env:LLM_OFFLINE=1; npm run analyze:opening -- data/manuscript.txt out/demo",
    "cache:clear": "node -e \"require('fs').rmSync('.smairs', { recursive: true, force: true })\"",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "generate:types": "node -e \"require('fs').mkdirSync('src/types', { recursive: true })\"; cargo run --manifest-path src-tauri/Cargo.toml --bin generate_types",
    "deploy": "node scripts/deploy.js production",
    "deploy:staging": "node scripts/deploy.js staging",
    "deploy:check": "node scripts/deploy.js --dry-run",
    "performance:audit": "npx lhci autorun",
    "performance:monitor": "node scripts/performance-monitor.js",
    "security:audit": "npm audit && npm run lint:security",
    "lint:security": "eslint . --config .eslintrc.security.js",
    "precommit": "npm run lint && npm run typecheck && npm run test:unit",
    "prepush": "npm run test:e2e:critical",
    "postinstall": "npm run generate:types"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@codemirror/language": "^6.10.0",
    "@codemirror/search": "^6.5.0",
    "@codemirror/state": "^6.3.0",
    "@codemirror/view": "^6.27.0",
    "@tanstack/react-query": "^5.0.0",
    "@tanstack/react-virtual": "^3.0.0",
    "@tauri-apps/api": "^2.0.0",
    "diff-match-patch": "^1.0.5",
    "fastest-levenshtein": "^1.0.16",
    "immer": "^10.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sql.js": "^1.13.0",
    "zod": "^3.23.8",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@playwright/test": "^1.55.0",
    "@tauri-apps/cli": "^2.0.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest-axe": "^3.5.9",
    "@types/node": "^20.19.11",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "@vitejs/plugin-react": "^4.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "autoprefixer": "^10.4.21",
    "cssnano": "^7.1.1",
    "eslint": "^9.33.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "jest-axe": "^10.0.0",
    "jsdom": "^26.1.0",
    "jszip": "^3.10.1",
    "prettier": "^3.2.0",
    "rollup-plugin-visualizer": "^6.0.3",
    "tsx": "^4.15.0",
    "typescript": "^5.5.0",
    "typescript-eslint": "^8.39.1",
    "vite": "^5.0.0",
    "vite-plugin-compression2": "^2.2.0",
    "vite-plugin-pwa": "^1.0.3",
    "vitest": "^1.0.0"
  },
  "packageManager": "npm@10.0.0"
}
